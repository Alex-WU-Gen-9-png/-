server {
    listen 80 ; 
    server_name yqclplan.zhangxiansheng.fun; 
    index index.php index.html index.htm default.php default.htm default.html; 
    access_log /www/sites/yqclplan.zhangxiansheng.fun/log/access.log main; 
    error_log /www/sites/yqclplan.zhangxiansheng.fun/log/error.log; 
    location ~ ^/(\.user.ini|\.htaccess|\.git|\.env|\.svn|\.project|LICENSE|README.md) {
        return 404; 
    }
    location ^~ /.well-known {
        allow all; 
        root /usr/share/nginx/html; 
    }
    if ( $uri ~ "^/\.well-known/.*\.(php|jsp|py|js|css|lua|ts|go|zip|tar\.gz|rar|7z|sql|bak)$" ) {
        return 403; 
    }
    root /www/sites/yqclplan.zhangxiansheng.fun/index; 
    error_page 404 /404.html; 
}
